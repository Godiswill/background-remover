---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { pageTitle, secondTitle, title } = Astro.props;
const description =
  'A free, private background remover that runs entirely in your browser. Upload, drag, or paste images to remove backgrounds using AI â€” no uploads, no tracking.';
---

<html lang="en" class="font-display text-[16px]">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1.0,maximum-scale=5.0,minimum-scale=1.0,viewport-fit=cover"
    />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="background remover, remove background, background removal, free background remover, transparent PNG, AI image editing"
    />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph (Facebook, LinkedIn, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bgg.one" />
    <meta property="og:image" content="https://bgg.one/bg-gone.jpg" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://bgg.one/bg-gone.jpg" />

    <link rel="icon" type="image/png" href="/favicon_32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon_48x48.png" sizes="48x48" />
    <link rel="icon" type="image/png" href="/favicon_96x96.png" sizes="96x96" />
    <link
      rel="icon"
      type="image/png"
      href="/favicon_114x114.png"
      sizes="114x114"
    />
    <link rel="apple-touch-icon" href="/logo.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "BgGone",
        "url": "https://bgg.one",
        "logo": "https://bgg.one/logo.png"
      }
    </script>
  </head>
  <body class="px-4">
    <Header />
    <h1
      class="text-center py-8 sm:py-8 text-3xl font-bold sm:text-4xl md:text-5xl lg:text-6xl"
    >
      {pageTitle}
      <p class="mt-2 sm:mt-4 text-lg sm:text-xl md:text-2xl lg:text-3xl">
        {secondTitle}
      </p>
    </h1>
    <main >
      <slot />
    </main>
    <Footer />
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-CZS9K7V64W"></script>
    <script src="../scripts/do.js"></script>
  </body>
</html>
